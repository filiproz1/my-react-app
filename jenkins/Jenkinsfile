pipeline {
    agent any
    stages {
        stage('Build') { 
            agent {
                dockerfile {
                    filename 'jenkins/Dockerfile.build'
                }
            }
        }

        stage('Test') { 
            agent {
                dockerfile {
                    filename 'jenkins/Dockerfile.test'
                }
            }
        }

        stage('Deploy') { 
            agent {
                dockerfile {
                    filename 'jenkins/Dockerfile.deploy'
                }
            }
        }
    }
}