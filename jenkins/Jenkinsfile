pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'docker build -t my-react-app - < ./jenkins/Dockerfile.build'
            }
            post {
                always {
                    archiveArtifacts(artifacts: 'log_*.txt', fingerprint: true, followSymlinks: false)
                }
                success {
                    echo 'Build success'
                }
                failure {
                    echo 'Build failed'
                } 
            }
        }
        stage('Test') { 
            steps {
                sh 'docker build -t my-react-app - < ./jenkins/Dockerfile.test'
            }
            post {
                always {
                    archiveArtifacts(artifacts: 'log_*.txt', fingerprint: true, followSymlinks: false)
                }
                success {
                    echo 'Test success'
                }
                failure {
                    echo 'Test failed'
                } 
            }
        }

        stage('Deploy') { 
            steps {
                sh 'docker build -t my-react-app - < ./jenkins/Dockerfile.deploy'
            }
            post {
                always {
                    archiveArtifacts(artifacts: 'log_*.txt', fingerprint: true, followSymlinks: false)
                }
                success {
                    sh "docker save my-react-app -o my-react-app.tar"
                    echo 'Deploy success'
                }
                failure {
                    echo 'Deploy failed'
                } 
            }
        }
    }
}