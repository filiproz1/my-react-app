pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'ls -la .'
                sh 'ls -la ./jenkins'
                sh 'docker build -t my-react-app:latest - < ./jenkins/Dockerfile.build'
            }
        }
        stage('Test') { 
            agent {
                docker {
                    image 'my-react-app:latest'
                }
            }
            steps {
                sh 'npm run test'
            }
        }

        stage('Deploy') { 
            agent {
                docker {
                    image 'my-react-app:latest'
                }
            }
            steps {
                sh 'npm run build'
                sh 'npx serve build'
            }
        }
    }
}