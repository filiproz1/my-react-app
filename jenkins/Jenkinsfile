pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    def app = docker.build("my-react-app:latest", "./jenkins/Dockerfile")
                }
            }
        }

        stage('Test') { 
            agent {
                docker {
                    image 'my-react-app:latest'
                }
            }
            steps {
                sh 'npm run test'
            }
        }

        stage('Deploy') { 
            agent {
                docker {
                    image 'my-react-app:latest'
                }
            }
            steps {
                sh 'npm run build'
                sh 'npx serve build'
            }
        }
    }
}