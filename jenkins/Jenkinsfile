pipeline {
    agent any
    stages {
        stage('Build') { 
            agent any
            steps {
                docker.build("my-react-app:latest", "./jenkins/Dockerfile.build")
            }
        }

        stage('Test') { 
            agent {
                dockerfile {
                    filename 'jenkins/Dockerfile.test'
                }
            }
        }

        stage('Deploy') { 
            agent {
                dockerfile {
                    filename 'jenkins/Dockerfile.deploy'
                }
            }
        }
    }
}